{
  "builders": [
    {
      "disk_size": 25,
      "disk_type": "pd-ssd",
      "image_description": "Vault Base Image",
      "image_family": "vault",
      "image_name": "vault-base",
      "machine_type": "{{user `machine_type`}}",
      "project_id": "{{user `project_id`}}",
      "region": "{{user `region`}}",
      "source_image_family": "{{user `source_image_family`}}",
      "ssh_username": "root",
      "type": "googlecompute",
      "zone": "{{user `zone`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["uname -a >> ~/sysinfo.txt"],
      "inline": ["wget https://releases.hashicorp.com/packer/{{user `packer`}}/packer_{{user `packer`}}_linux_amd64.zip"],
      "inline": ["unzip packer_{{user `packer`}}_linux_amd64.zip"]
    }
  ],
  "variables": {
    "machine_type": "n1-standard-1",
    "project_id": "{{env `PROJECT_ID`}}",
    "region": "northamerica-northeast1",
    "source_image_family": "ubuntu-2004-lts",
    "zone": "northamerica-northeast1-c",
    "packer": "1.5.5"
  }
}
