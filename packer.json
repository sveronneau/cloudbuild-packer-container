{
  "builders": [
    {
      "disk_size": 25,
      "disk_type": "pd-ssd",
      "image_description": "Vault Base Image",
      "image_family": "vault",
      "image_name": "vault-base",
      "machine_type": "{{user `machine_type`}}",
      "project_id": "{{user `project_id`}}",
      "region": "{{user `region`}}",
      "source_image_family": "{{user `source_image_family`}}",
      "ssh_username": "root",
      "type": "googlecompute",
      "zone": "{{user `zone`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "uname -a >> ~/sysinfo.txt",
        "sudo apt-get update",
        "sudo apt-get install -y unzip",
        "wget https://releases.hashicorp.com/vault/{{user `vault`}}/vault_{{user `vault`}}_linux_amd64.zip",        
        "unzip vault_{{user `vault`}}_linux_amd64.zip",
        "mv vault /usr/local/bin/",
        "rm -f vault_{{user `vault`}}_linux_amd64.zip",
        "wget https://releases.hashicorp.com/consul/{{user `consul`}}/consul_{{user `consul`}}_linux_amd64.zip",        
        "unzip consul_{{user `consul`}}_linux_amd64.zip",
        "mv consul /usr/local/bin/",
        "rm -f consul_{{user `consul`}}_linux_amd64.zip"
      ]
    }
  ],
  "variables": {
    "machine_type": "n1-standard-1",
    "project_id": "{{env `PROJECT_ID`}}",
    "region": "northamerica-northeast1",
    "source_image_family": "ubuntu-2004-lts",
    "zone": "northamerica-northeast1-c",
    "vault": "1.4.0",
    "consul": "1.7.2"
  }
}
