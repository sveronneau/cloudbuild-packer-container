{
  "builders": [
    {
      "disk_size": 25,
      "disk_type": "pd-ssd",
      "image_description": "Vault Base Image",
      "image_family": "vault",
      "image_name": "vault-base",
      "machine_type": "{{user `machine_type`}}",
      "project_id": "{{user `project_id`}}",
      "region": "{{user `region`}}",
      "source_image_family": "{{user `source_image_family`}}",
      "ssh_username": "root",
      "type": "googlecompute",
      "zone": "{{user `zone`}}"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "uname -a >> ~/sysinfo.txt",
        "sudo apt-get update",
        "sudo apt-get install -y unzip",
        "wget https://releases.hashicorp.com/packer/{{user `packer`}}/packer_{{user `packer`}}_linux_amd64.zip",
        "unzip packer_{{user `packer`}}_linux_amd64.zip",
        "mv packer /usr/local/bin/",
        "rm -f packer_{{user `packer`}}_linux_amd64.zip",
        "vault -autocomplete-install",
        "complete -C /usr/local/bin/vault vault",
        "setcap cap_ipc_lock=+ep /usr/local/bin/vault",
        "useradd --system --home /etc/vault.d --shell /bin/false vault",
        "touch /etc/systemd/system/vault.service"        
      ]
    }
  ],
  "variables": {
    "machine_type": "n1-standard-1",
    "project_id": "{{env `PROJECT_ID`}}",
    "region": "northamerica-northeast1",
    "source_image_family": "ubuntu-2004-lts",
    "zone": "northamerica-northeast1-c",
    "packer": "1.5.5"
  }
}
